function program (N, T)
  alwaysOn(N, T)
  // onDemand(N, T)
end function

function get_data(T)
  while controller::peek() = 0 bound T do 
    skip 
  end while
  get_data := controller::read()
end function

function alwaysOn(N, T)
  hdd::on()
  while controller::engaged() > 0 bound N do
    X := get_data(T)
    hdd::write(X)
  end while
  hdd::off()
end function

function onDemand(N, T)
  while controller::engaged() > 0 bound N do
    X := get_data(T)
    hdd::on()
    hdd::write(X)
    hdd::off()
  end while
end function


(* the following demonstrates that our analysis is heavily dependent loop factorization *)

function caching(N, T, B)
  while controller::engaged() > 0 bound N do
    X := get_data(T)
    Q := controller::queue(X)
    if Q >= B then
      hdd::on()
      while Q > 0 bound B do
        X := controller::pop()
        hdd::write(X)
        Q := Q-1
      end while
      hdd::off()
    else
      skip
    end if
  end while
end function

function caching2(NB, T, B)
  while controller::engaged() > 0 bound NB do
    Q := 0
    while controller::engaged() > 0 bound B do
      X := get_data(T)
      Q := controller::queue(X)
    end while

    hdd::on()
    while Q > 0 bound B do
      X := controller::pop()
      hdd::write(X)
      Q := Q-1
    end while
    hdd::off()
  end while
end function

function caching3(N, T, B)
  while controller::engaged() > 0 bound N/B do
    Q := 0
    while controller::engaged() > 0 bound B do
      X := get_data(T)
      Q := controller::queue(X)
    end while

    hdd::on()
    while Q > 0 bound B do
      X := controller::pop()
      hdd::write(X)
      Q := Q-1
    end while
    hdd::off()
  end while
end function
  

